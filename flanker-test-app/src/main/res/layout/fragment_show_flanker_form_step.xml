<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/rs2_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progress="25"
        />

    <LinearLayout
        android:id="@+id/rs2_step_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/nav"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/flankerLeftTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:fontFamily="@font/lato_black"
            android:textSize="70dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/flankerLeftTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:fontFamily="@font/lato_black"
            android:textSize="70dp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/flankerTargetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:fontFamily="@font/lato_black"
            android:textSize="70dp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/flankerRightTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:fontFamily="@font/lato_black"
            android:textSize="70dp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/flankerRightTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:fontFamily="@font/lato_black"
            android:textSize="70dp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <org.sagebionetworks.research.mobile_ui.widget.ActionButton
            android:id="@+id/rs2_step_navigation_action_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="70dp"
            android:gravity="center"/>

        <org.sagebionetworks.research.mobile_ui.widget.ActionButton
            android:id="@+id/rs2_step_navigation_action_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="→"
            android:textSize="70dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>